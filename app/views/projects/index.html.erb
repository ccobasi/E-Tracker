<% provide(:title, "Projects") %>
<div class="total-project d-flex flex-column px-2 position-relative">
  <div class="exp-total fw-bold  d-flex justify-content-center align-items-center mt-1 mb-4">
    <span class="me-2">
      Projects:<%=@projects.count%>
    </span>
    <span>
      Total duration: <%= total_project(@projects)  %> 
    </span>
  </div>
  <%= render 'project' %>
  <div class="container d-flex flex-column justify-content-center align-items-center">
            <%=  link_to 'javascript:history.back()', class:"card-link text-decoration-none my-3" do %>
            <i class="bi bi-arrow-left-square text-dark"></i>
            <% end %>
        </div>
        <div class="new-task-btn text-center bg-succes position-fixed d-flex align-items-center justify-content-center">
                <%= link_to 'New Project', new_project_path, class: "button is-primary" %>
                </div>
