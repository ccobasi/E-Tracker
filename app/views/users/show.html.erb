      <li class="list-group-item">
        <%=link_to 'All groups', groups_path, class: 'nav-link d-flex justify-content-center bi bi-collection-fill'%>
      </li>
      <li class="list-group-item">
        <%=link_to 'Edit your profile', edit_user_path(current_user), class:'d-flex justify-content-center nav-link text-decoration-none bi bi-pencil-square'%>
      </li>
    </ul>
    <p class="text-center">
