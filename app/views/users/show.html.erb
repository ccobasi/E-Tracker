
<% provide(:title, "#{@user.name}") %>
<div class="d-flex flex-column align-items-center">
  <div class="user-thumb my-3">
    <%=image_tag(@user.avatar, style:"width:100px; height:100px; border-radius:50%")%>
  </div>
  <div>
            <p class="text-center">
                
            <p>
        </div>
  <div class="user-profile-ul">
    <ul class="list-group">
      <div class="username text-white d-flex justify-content-center nav-link p-2 mt-3"> <%="Hello #{current_user.name.titlecase} ready to start building project?"%></div>
      <li class="list-group-item">
        <%=link_to 'All my Projects', projects_path, class: 'nav-link d-flex justify-content-center bi bi-cash'%>
      </li>
      
      <li class="list-group-item">
                <%=link_to 'All My External Projects', projects_path(ungrouped: true), class: 'nav-link d-flex justify-content-left bi bi-list-stars'%>
